<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_gray</item>
        <item name="colorPrimaryVariant">@color/theme_gray</item>
        <item name="colorOnPrimary">@color/theme_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_yellow</item>
        <item name="colorSecondaryVariant">@color/theme_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/theme_gray</item>
        <item name="android:itemTextAppearance">@style/CustomTextMenu</item>
        <item name="titleTextColor">@color/theme_yellow</item>
    </style>
    
    <style name="CustomTextMenu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/theme_yellow</item>
    </style>
</resources>